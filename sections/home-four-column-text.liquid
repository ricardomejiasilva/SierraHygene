<section
  class="four-column-text"
  data-section-id="{{ section.id }}"
  data-section-type="four-column-text"
>
  <div class="four-column-text__container">
    {% for block in section.blocks %}
      <div class="four-column-text__item" {{ block.shopify_attributes }}>
        {% if block.settings.heading != blank %}
          <h3 class="four-column-text__heading">
            {{ block.settings.heading }}
          </h3>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="four-column-text__text">
            {{ block.settings.text }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} .four-column-text {
    padding: {{ section.settings.padding_top }}px 30px {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    max-width: 1200px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .four-column-text__container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }

  #shopify-section-{{ section.id }} .four-column-text__item {
    text-align: {{ section.settings.text_alignment }};
  }

  #shopify-section-{{ section.id }} .four-column-text__heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.3;
  }

  #shopify-section-{{ section.id }} .four-column-text__text {
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
    max-width: {{ section.settings.text_max_width }}px;
    {% if section.settings.text_alignment == 'center' %}
    margin-left: auto;
    margin-right: auto;
    {% elsif section.settings.text_alignment == 'right' %}
    margin-left: auto;
    {% endif %}
  }

  @media screen and (max-width: 1024px) {
    #shopify-section-{{ section.id }} .four-column-text__container {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px 30px;
    }
  }

  @media screen and (max-width: 600px) {
    #shopify-section-{{ section.id }} .four-column-text__container {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
</style>

{% schema %}
{
  "name": "Four Column Text",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#4a4a4a"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 16,
      "max": 36,
      "step": 1,
      "default": 22,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text size",
      "min": 12,
      "max": 20,
      "step": 1,
      "default": 15,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "text_max_width",
      "label": "Text max width",
      "min": 150,
      "max": 400,
      "step": 10,
      "default": 300,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Add your description text here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Four Column Text",
      "category": "Text",
      "blocks": [
        {
          "type": "column",
          "settings": {
            "heading": "Quality",
            "text": "Great paper products start with the right materials. We use carefully selected paper to manufacture disposables in America—delivering consistent performance, roll after roll, case after case."
          }
        },
        {
          "type": "column",
          "settings": {
            "heading": "Affordability",
            "text": "Rising costs are a reality. That's why we design our manufacturing and supply chain to deliver dependable paper products at a price that makes sense for high-volume operations."
          }
        },
        {
          "type": "column",
          "settings": {
            "heading": "Integrity",
            "text": "Integrity is built into our operation. We maintain clear standards, reliable processes, and accountability across sourcing, production, and delivery."
          }
        },
        {
          "type": "column",
          "settings": {
            "heading": "Customer Focus",
            "text": "We prioritize dependable supply and straightforward service. Our job is to make sure customers get the products they need—on time and at scale."
          }
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": [
      "index",
      "product",
      "page"
    ]
  }
}
{% endschema %}
