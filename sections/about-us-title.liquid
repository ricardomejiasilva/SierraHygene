<section
  class="about-us-title-section"
  data-section-id="{{ section.id }}"
  data-section-type="about-us-title"
  style="
    {%- if section.settings.padding_top -%}padding-top: {{ section.settings.padding_top }}px;{%- endif -%}
    {%- if section.settings.padding_bottom -%}padding-bottom: {{ section.settings.padding_bottom }}px;{%- endif -%}
  "
>
  <div class="about-us-title-container">
    {% if section.settings.title != blank %}
      <h1 class="about-us-main-title"
          style="
            {%- if section.settings.heading_font_size -%}font-size: {{ section.settings.heading_font_size }}px;{%- endif -%}
            {%- if section.settings.heading_color -%}color: {{ section.settings.heading_color }};{%- endif -%}
            {%- if section.settings.heading_italic -%}font-style: italic;{%- endif -%}
          ">
        {{ section.settings.title | escape }}
      </h1>
    {% endif %}
  </div>
</section>

<style>
  .about-us-title-section {
    text-align: center;
    /* Default padding - can be overridden by inline styles */
    padding: 50px 0;
  }
  
  .about-us-title-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .about-us-main-title {
    font-weight: 700;
    margin: 0;
    padding: 0;
    border: none;
    line-height: 1.2;
    /* Default values - can be overridden by inline styles */
    font-size: 40px;
    font-style: normal;
    color: #1C3D37;
  }
  
  /* Remove any default borders or lines */
  .about-us-title-section::after,
  .about-us-title-section::before {
    display: none;
  }
</style>

{% schema %}
{
  "name": "Page Title",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "The Sierra Hygiene Story"
    },
    {
      "type": "header",
      "content": "Heading Style"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 16,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading font size",
      "default": 40
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#1C3D37"
    },
    {
      "type": "checkbox",
      "id": "heading_italic",
      "label": "Italic heading",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Page Title",
      "category": "Text"
    }
  ]
}
{% endschema %} 