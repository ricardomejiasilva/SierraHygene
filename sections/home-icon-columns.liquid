<section
  class="icon-columns"
  data-section-id="{{ section.id }}"
  data-section-type="icon-columns"
>
  <div class="icon-columns__container">
    {% for block in section.blocks %}
      <div class="icon-columns__item" {{ block.shopify_attributes }}>
        {% if block.settings.icon != blank %}
          <div class="icon-columns__icon">
            {%
              render 'rimg',
              img: block.settings.icon,
              size: '27x27',
              class: 'icon-columns__icon-img',
              lazy: true,
            %}
          </div>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h3 class="icon-columns__heading">
            {{ block.settings.heading }}
          </h3>
        {% endif %}

        {% if block.settings.text != blank %}
          <p class="icon-columns__text">
            {{ block.settings.text }}
          </p>
        {% endif %}

        {% if block.settings.link_text != blank %}
          {% if block.settings.link_url != blank %}
            <a href="{{ block.settings.link_url }}" class="icon-columns__link">
              {{ block.settings.link_text }}
            </a>
          {% else %}
            <span class="icon-columns__link">
              {{ block.settings.link_text }}
            </span>
          {% endif %}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
  #shopify-section-{{ section.id }} .icon-columns {
    padding: {{ section.settings.padding_top }}px 0px {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    max-width: 1200px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .icon-columns__container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }

  #shopify-section-{{ section.id }} .icon-columns__item {
    text-align: left;
    overflow: hidden;
  }

  #shopify-section-{{ section.id }} .icon-columns__icon {
    margin-bottom: 16px;
  }

  #shopify-section-{{ section.id }} .icon-columns__icon-img {
    width: {{ section.settings.icon_size }}px;
    height: auto;
    max-width: 27px;
    max-height: 27px;
  }

  #shopify-section-{{ section.id }} .icon-columns__heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin: 0 0 12px;
    line-height: 1.3;
  }

  #shopify-section-{{ section.id }} .icon-columns__text {
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.5;
    margin: 0 0 8px;
  }

  #shopify-section-{{ section.id }} .icon-columns__link {
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.link_color }};
    text-decoration: underline;
    display: inline-block;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  #shopify-section-{{ section.id }} .icon-columns__link:hover {
    opacity: 0.8;
  }

  @media screen and (max-width: 1024px) {
    #shopify-section-{{ section.id }} .icon-columns__container {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px 30px;
    }
  }

  @media screen and (max-width: 600px) {
    #shopify-section-{{ section.id }} .icon-columns {
      padding-bottom: 16px;
    }

    #shopify-section-{{ section.id }} .icon-columns__container {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px 20px;
    }

    #shopify-section-{{ section.id }} .icon-columns__heading {
      font-size: 18px;
    }

    #shopify-section-{{ section.id }} .icon-columns__text {
      font-size: 14px;
    }

    #shopify-section-{{ section.id }} .icon-columns__link {
      font-size: 12px;
    }
  }
</style>

