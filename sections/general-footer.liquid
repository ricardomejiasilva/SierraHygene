{% liquid
  assign menu_1 = section.settings.menu_1
  assign menu_2 = section.settings.menu_2
  assign menu_3 = section.settings.menu_3
%}

<footer class="site-footer" data-section-id="{{ section.id }}" data-section-type="static-footer">
  <div class="site-footer__container">
    <div class="site-footer__content">
      
      <!-- Logo Column -->
      <div class="site-footer__logo-column">
        <a href="{{ routes.root_url }}" class="site-footer__logo-link">
          <img 
            src="{{ 'sierra-hygene-logo.svg' | asset_url }}" 
            alt="{{ shop.name }}" 
            class="site-footer__logo"
            width="232"
            height="142"
          >
        </a>
      </div>
      
      <!-- Navigation Columns -->
      <div class="site-footer__nav-columns">
        <!-- Menu 1 -->
        {% if linklists[menu_1].links.size > 0 %}
          <nav class="site-footer__nav-column" aria-label="Footer navigation 1">
            <ul class="site-footer__nav-list">
              {% for link in linklists[menu_1].links %}
                <li class="site-footer__nav-item">
                  <a href="{{ link.url }}" class="site-footer__nav-link">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
        
        <!-- Menu 2 -->
        {% if linklists[menu_2].links.size > 0 %}
          <nav class="site-footer__nav-column" aria-label="Footer navigation 2">
            <ul class="site-footer__nav-list">
              {% for link in linklists[menu_2].links %}
                <li class="site-footer__nav-item">
                  <a href="{{ link.url }}" class="site-footer__nav-link">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
        
        <!-- Menu 3 -->
        {% if linklists[menu_3].links.size > 0 %}
          <nav class="site-footer__nav-column" aria-label="Footer navigation 3">
            <ul class="site-footer__nav-list">
              {% for link in linklists[menu_3].links %}
                <li class="site-footer__nav-item">
                  <a href="{{ link.url }}" class="site-footer__nav-link">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
      </div>
      
    </div>
    
    <!-- Copyright -->
    <div class="site-footer__bottom">
      <p class="site-footer__copyright">
        Copyright &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ powered_by_link }}
      </p>
    </div>
    
  </div>
</footer>

<style>
  .site-footer {
    background-color: {{ section.settings.background_color }};
    background-image: url('{{ section.settings.background_image | image_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .site-footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
  }
  
  .site-footer__content {
    display: flex !important;
    flex-direction: row !important;
    justify-content: space-between !important;
    align-items: flex-start !important;
    flex-wrap: nowrap !important;
  }
  
  .site-footer__logo-column {
    flex-shrink: 0;
  }
  
  .site-footer__logo-link {
    display: block;
  }
  
  .site-footer__logo {
    width: auto;
    height: auto;
    max-width: 180px;
  }
  
  .site-footer__nav-columns {
    display: flex !important;
    flex-direction: row !important;
    gap: 80px;
    flex-wrap: nowrap !important;
    align-items: flex-start;
  }
  
  .site-footer__nav-column {
    min-width: auto;
  }
  
  .site-footer__nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .site-footer__nav-item {
    margin: 0;
  }
  
  .site-footer__nav-link {
    color: {{ section.settings.text_color }};
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    position: relative;
    display: inline-block;
    transition: color 0.2s ease;
    white-space: nowrap;
  }
  
  .site-footer__nav-link::before {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    content: "";
    background-color: #7BB0AF;
    transition: transform 0.2s ease;
    transform: scaleX(0);
    transform-origin: center;
  }
  
  .site-footer__nav-link:hover {
    color: #7BB0AF;
  }
  
  .site-footer__nav-link:hover::before {
    transform: scaleX(1);
  }
  
  .site-footer__bottom {
    margin-top: 30px;
  }
  
  .site-footer__copyright {
    color: {{ section.settings.text_color }};
    font-size: 13px;
    margin: 0;
    opacity: 0.7;
  }
  
  .site-footer__copyright a {
    color: {{ section.settings.text_color }};
  }
  
  /* Tablet styles - Logo left, links below in 3 columns stretched */
  @media (max-width: 900px) {
    .site-footer__content {
      flex-direction: column !important;
      align-items: flex-start !important;
      gap: 40px !important;
    }
    
    .site-footer__logo {
      max-width: 160px;
    }
    
    .site-footer__nav-columns {
      flex-direction: row !important;
      justify-content: flex-start !important;
      gap: 0 !important;
      width: 100%;
    }
    
    .site-footer__nav-column {
      flex: 1;
    }
    
    .site-footer__bottom {
      text-align: left;
    }
  }
  
  /* Mobile styles - Logo centered, links stacked vertically */
  @media (max-width: 480px) {
    .site-footer__container {
      padding: 0 20px;
    }
    
    .site-footer__content {
      flex-direction: column !important;
      align-items: center !important;
      text-align: center;
      gap: 30px !important;
    }
    
    .site-footer__logo-column {
      align-self: center;
    }
    
    .site-footer__logo {
      max-width: 180px;
    }
    
    .site-footer__nav-columns {
      flex-direction: column !important;
      align-items: center !important;
      gap: 0 !important;
      width: 100%;
    }
    
    .site-footer__nav-column {
      width: 100%;
      text-align: center;
      flex: none;
    }
    
    .site-footer__nav-list {
      align-items: center;
      gap: 0;
    }
    
    .site-footer__nav-item {
      padding: 8px 0;
    }
    
    .site-footer__nav-link {
      font-size: 18px;
    }
    
    .site-footer__bottom {
      text-align: left;
      width: 100%;
      margin-top: 40px;
    }
    
    .site-footer__copyright {
      font-size: 12px;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "class": "footer-section",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1a1a1a"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Navigation Menus"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1 (Left column)",
      "info": "First column of links"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2 (Middle column)",
      "info": "Second column of links"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu 3 (Right column)",
      "info": "Third column of links"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "px"
    }
  ]
}
{% endschema %}
