{% liquid
  assign spacing_height = section.settings.spacing_height | default: 60
%}

<section 
  class="spacer-section"
  style="
    height: {{ spacing_height }}px; 
    display: block;
    {%- if section.settings.background_image -%}
      background-image: url('{{ section.settings.background_image | img_url: '2000x' }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {%- endif -%}
  "
  data-section-id="{{ section.id }}"
>
</section>

{% schema %}
{
  "name": "Spacer",
  "class": "pxs-spacer-section",
  "settings": [
    {
      "type": "select",
      "id": "spacing_height",
      "label": "Spacing height",
      "options": [
        {
          "value": "20",
          "label": "Small (20px)"
        },
        {
          "value": "40",
          "label": "Medium (40px)"
        },
        {
          "value": "60",
          "label": "Large (60px)"
        },
        {
          "value": "80",
          "label": "Extra Large (80px)"
        },
        {
          "value": "100",
          "label": "XXL (100px)"
        },
        {
          "value": "120",
          "label": "XXXL (120px)"
        },
        {
          "value": "200",
          "label": "XXXXL (200px)"
        }
      ],
      "default": "60"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (optional)",
      "info": "Upload a background image for the spacer section"
    }
  ],
  "presets": [
    {
      "category": "Custom",
      "name": "Spacer"
    }
  ],
  "enabled_on": {
    "templates": [
      "index",
      "product",
      "page",
      "collection",
      "blog",
      "article"
    ]
  }
}
{% endschema %} 