  {
    "name": "Products",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_cart_redirection",
        "label": "Enable cart redirection",
        "info": "Automatically sends users to the Cart page after adding a product.",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_payment_button",
        "label": "Show dynamic checkout button",
        "info": "Each customer will see their preferred payment method from those available on your store, such as PayPal or Apple Pay. [Learn more](https://help.shopify.com/manual/using-themes/change-the-layout/dynamic-checkout)",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "linked_options",
        "label": "Disable sold out variants",
        "default": true
      },
      {
        "type": "select",
        "id": "variants_style",
        "label": "Variants style",
        "options": [
          {
            "value": "select",
            "label": "Dropdowns"
          },
          {
            "value": "radio",
            "label": "Buttons"
          }
        ],
        "default": "select"
      },
      {
        "type": "header",
        "content": "Product grid"
      },
      {
        "type": "checkbox",
        "id": "product_show_vendor",
        "label": "Show names of vendors",
        "default": false
      },
      {
        "type": "header",
        "content": "Stock level indicator"
      },
      {
        "type": "checkbox",
        "id": "product_stock_overlay",
        "label": "Show product stock overlay",
        "default": false
      },
      {
        "type": "range",
        "id": "product_stock_overlay_show",
        "label": "Show when stock is lower than:",
        "min": 2,
        "max": 10,
        "step": 1,
        "default": 5
      },
      {
        "type": "header",
        "content": "Product reviews"
      },
      {
        "type": "checkbox",
        "id": "product_ratings_reviews",
        "label": "Enable product reviews and ratings",
        "info": "[Learn more](https://apps.shopify.com/product-reviews)",
        "default": true
      },
      {
        "type": "radio",
        "id": "product_ratings_star_display",
        "label": "Display star ratings",
        "options": [
          {
            "label": "Product page and product cards",
            "value": "all"
          },
          {
            "label": "Product page only",
            "value": "prod-page"
          }
        ],
        "default": "all"
      }
    ]
